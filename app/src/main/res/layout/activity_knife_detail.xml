<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    android:padding="@dimen/spacing_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- IMAGEN DEL CUCHILLO -->
        <ImageView
            android:id="@+id/ivDetalleImagen"
            android:layout_width="@dimen/detail_image_size"
            android:layout_height="@dimen/detail_image_size"
            android:layout_marginBottom="@dimen/spacing_large"
            android:scaleType="fitCenter" />

        <!-- NOMBRE DEL CUCHILLO -->
        <TextView
            android:id="@+id/tvDetalleNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalle_nombre"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- DESCRIPCIÃ“N LARGA -->
        <TextView
            android:id="@+id/tvDetalleDescripcionLarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_descripcion"
            android:textSize="@dimen/text_body"
            android:textColor="@color/black"
            android:lineSpacingExtra="@dimen/spacing_small" />

    </LinearLayout>

</ScrollView>
